{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts",
    "Providers": "providers"
  },
  "preloads": ["./start/routes", "./start/kernel", "./start/events"],
  "providers": [
    "@adonisjs/core",
    "@adonisjs/lucid",
    "@adonisjs/redis",
    "@adonisjs/auth",
    "@adonisjs/view",
    "./providers/ServiceRegisterProvider",
    "./providers/AppProvider"
  ],
  "aceProviders": ["@adonisjs/repl"],
  "metaFiles": [
    {
      "pattern": "public/dist/spa/**",
      "reloadServer": false
    },
    {
      "pattern": "content/themes/**/**/*.edge",
      "reloadServer": true
    }
  ]
}
